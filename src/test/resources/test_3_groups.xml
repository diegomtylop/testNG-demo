<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="Test NG groups demo" verbose="1">
    <test name="TestNG Test group1" >
        <groups>
            <run>
                <include name="group1"/>
            </run>
        </groups>
        <classes>
            <class name="com.globant.qasummit.tests.PeakAndDocumentAssertionsTests" />
        </classes>
    </test>

    <test name="TestNG Test group2" >
        <groups>
            <run>
                <include name="group2"/>
            </run>
        </groups>
        <classes>
            <class name="com.globant.qasummit.tests.PeakAndDocumentAssertionsTests" />
        </classes>
    </test>

    <test name="TestNG Test group3" >
        <groups>
            <run>
                <exclude name="group1"/>
                <include name="group3"/>
            </run>
        </groups>
        <classes>
            <class name="com.globant.qasummit.tests.PeakAndDocumentAssertionsTests" />
        </classes>
    </test>
</suite>
